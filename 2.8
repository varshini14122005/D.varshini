def calculate_total_cost(meal_cost):
    tax_rate = 0.05
    tip_rate = 0.18
    tax = meal_cost * tax_rate
    tip = meal_cost * tip_rate
    total_cost = meal_cost + tax + tip
    return tax, tip, total_cost
meal_cost = float(input())
tax, tip, total_cost = calculate_total_cost(meal_cost)
print(f"The tax is {tax:.2f} and the tip is {tip:.2f}, making the total {total_cost:.2f}")
