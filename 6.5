def find_pivot_index(arr):
    n = len(arr)
    total_sum = sum(arr)
    left_sum = 0

    for i in range(n):
        right_sum = total_sum - left_sum - arr[i]
        if left_sum == right_sum:
            return i
        left_sum += arr[i]

# Input
n = int(input().strip())
arr = [int(input().strip()) for _ in range(n)]

# Finding the pivot index
pivot_index = find_pivot_index(arr)

# Output
print(pivot_index)
